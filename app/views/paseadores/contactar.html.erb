


<%= form_for @solicitud, url: enviar_contacto_paseadore_path(@paseador), method: :post do |f| %>
  <% if user_signed_in? %>
    <!-- Si el usuario está autenticado, no pedir el nombre y correo -->
    <%= f.hidden_field :email, value: current_user.email %>
  <% else %>
    <!-- Si el usuario no está autenticado, pedir el nombre y correo -->
    <div class="form-group">
      <%= f.label :nombre, 'Tu nombre' %>
      <%= f.text_field :nombre, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'Tu correo electrónico' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mensaje, 'Mensaje' %>
    <%= f.text_area :mensaje, class: 'form-control' %>
  </div>

  <%= f.submit 'Enviar Solicitud', class: 'btn btn-primary' %>
<% end %>
