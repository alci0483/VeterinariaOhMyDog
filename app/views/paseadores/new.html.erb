  <h1></h1>
<div class="perdidos-list">
  <%= form_with model: @paseador, url: paseadores_path do |form| %>
    
    <div class="form-group">
      <%= form.label :nombre %>
      <%= form.text_field :nombre, class: "input-tamanocampo" %>
    </div>

    <div class="form-group">
      <%= form.label :apellido %>
      <%= form.text_field :apellido, class: "input-tamanocampo" %>
    </div>

    <div class="form-group">
      <%= form.label :horarios %>
      <%= form.text_field :horarios, class: "input-tamanocampo" %>
    </div>

    <div class="form-group">
      <%= form.label :ubicacion %>
      <%= form.text_field :ubicacion, class: "input-tamanocampo" %>
    </div>
    <br>
    <div class="form-group">
      <%= form.submit "Confirmar", class: "btn-publicar btn-primary" %>
    </div>
  <% end %>

  <% if defined?(@error_message) && @error_message.present? %>
    <div class="alert alert-danger">
      <%= @error_message %>
    </div>
  <% end %>
