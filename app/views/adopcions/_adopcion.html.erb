<div class="container-fluid card border-secondary mb-3" style="max-width: 18rem;">
  <div class="card-header text-center">
    <strong>Nombre:</strong>
    <%= adopcion.nombre %>
  </div>
  <div class="card-body text-secondary">
    <h6 class="card-text text-center">
      <strong>Tamanio:</strong>
      <%= adopcion.tamanio %>
    </h6>
    <h6 class="card-text text-center">
      <strong>Edad:</strong>
      <%= adopcion.edad %>
    </h6>
    <h6 class="card-text text-center">
      <strong>Ubicacion:</strong>
      <%= adopcion.ubicacion %>
    </h6>
    <h6 class="card-text text-center">
      <strong>Raza:</strong>
      <%= adopcion.raza %>
      
    </h6>
    <h6 class="card-text text-center">
    <strong>estado:</strong>
    <td><%= adopcion.estado %></td>
    
    </h6>
    <% if user_signed_in? && !current_user.admin? && adopcion.estado == 'en adopcion' && adopcion.user_id == current_user.id%>
    <%= button_to "Adoptado", adoptar_adopcion_path(adopcion), method: :post, class: 'btn btn-success' %>
    <% end %>
    <% if user_signed_in? && adopcion.user_id != current_user.id %>
      <button onclick="return confirm('acercate a la veterinaria para más información')">Contactar</button>
    <% end %>
    
  </div>
</div>
