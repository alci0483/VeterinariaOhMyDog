<h1>Editar Edad de Perro en Adopcion</h1>

<div class="perdidos-list">

  <%= form_with(model: @adopcion) do |form| %>
  <div class="form-group">
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre, class: "input-tamanocampo", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tamanio, "TamaÃ±o en centimetros", style: "display: block" %>
    <%= form.number_field :tamanio, class: "input-tamanocampo", min: 10, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :edad, "Edad en meses",style: "display: block" %>
    <%= form.number_field :edad, class: "input-tamanocampo", min: @adopcion.edad+1, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :ubicacion, style: "display: block" %>
    <%= form.text_field :ubicacion, class: "input-tamanocampo", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :raza, style: "display: block" %>
      <%= form.select :raza, ['Labrador Retriever', 'Golden Retriever', 'German Shepherd', 'Bulldog', 'Beagle', 'Poodle', 'Rottweiler', 'Dachshund', 'Boxer', 'Shih Tzu', 'Siberian Husky', 'Doberman Pinscher', 'Great Dane', 'Chihuahua', 'Pug', 'Yorkshire Terrier', 'Border Collie', 'Cocker Spaniel', 'Australian Shepherd', 'Shetland Sheepdog', 'Maltese', 'Dalmatian', 'Basset Hound', 'Cavalier King Charles Spaniel','Otra'], required: true %>
  </div>
  <br>

  <!-- <%= form.hidden_field :estado, value: @adopcion.estado %>
  <%= form.hidden_field :user_id, value: current_user.id %> -->

  <div>
    <%= form.submit 'Publicar Adopcion', class: "btn-publicar btn-primary"%>
  </div>
<% end %>
</div>

<div>
  <%= link_to "Volver a adopciones", adopcions_path %>
</div>
