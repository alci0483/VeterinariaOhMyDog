<!DOCTYPE html>
<html>
  <head>
    <title>Veterinaria Oh My Dog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom_link", media: "all" %>
    <%= javascript_importmap_tags %>

  </head>

  <body>



      <!-- Barra de navegación -->
      <nav class="navbar navbar-expand-lg navbar-light p-2 text-white" style="background-color: rgba(255, 214, 153, 0.5);">

        <%= image_tag("logo.jpeg", size: "180x120", class: "logo-image") %>

        <!--
        <div class="p-3" style="background-color: #FFA500; color: white; border: 1px solid #28a745; padding: 2px; margin-bottom: 2px;">
          <h4> Veterinaria Oh My Dog  </h4>
        </div>
        -->

          <%= link_to home_path, class: "btn bg-success p-2 text-white bg-opacity-50" do %>
            <div class="p-3" style="background-color: #FFA500; color: white; border: 1px solid #28a745; padding: 2px; margin-bottom: 2px;">
              <p1> HOME </p1>
            </div>
          <% end %>

          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <% if user_signed_in? %>
                <%= link_to destroy_user_session_path, class: "btn bg-success p-2 text-white bg-opacity-50" do %>
                  <div class="p-3" style="background-color: #FFA500; color: white; border: 1px solid #28a745; padding: 2px; margin-bottom: 2px;">
                    <p1> Cerrar Sesión </p1>
                  </div>
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: "btn bg-success p-2 text-white bg-opacity-50" do %>
                  <div class="p-3 bg-info bg-opacity-10 border border-info border-start-0 rounded-end">
                    <p1> Iniciar Sesión </p1>
                  </div>
                <% end %>
              <% end %>
              <% if user_signed_in?  && current_user.admin?%>
                <%= link_to  new_admin_registration_path,class: "btn bg-success p-2 text-white bg-opacity-50" do %>
                <div class="p-3" style="background-color: #FFA500; color: white; border: 1px solid #28a745; padding: 2px; margin-bottom: 2px;">
                  <p1> Registrar Usuario</p1>
                </div>
                <% end %>
              <% end %>

              <% if user_signed_in? %>
                <%= link_to  mensajes_path,class: "btn bg-success p-2 text-white bg-opacity-50" do %>
                <div class="p-3" style="background-color: #FFA500; color: white; border: 1px solid #28a745; padding: 2px; margin-bottom: 2px;">
                  <p1> Ver mis mensajes </p1>
                </div>
                <% end %>
              <% end %>

            </li>
          </ul>

          <% if user_signed_in?%>
            <p class="text-black"> Perfil: <%= link_to User.find(current_user.id).email, usuario_path(current_user) %></p>
          <% end %>
      </nav>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <p class="navbar-text pull-right">

    <%= yield %>

  </body>
  <br>
  <br>
  <br>
  <br>
  <div class="bar">
    <p>Derechos de autor © 2023 - Oh my Dog</p>
  </div>
  <br>
  <br>
</html>
