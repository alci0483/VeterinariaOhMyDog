
<h1>Sacar Turno</h1>
<div class="perdidos-list">
<%= form_with model: @turno do |f| %>
  <% @turno.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre_perro, "Nombre del Perro" %>
    <%= f.collection_check_boxes :nombre_perro, current_user.perros.all,:nombre, :nombre do |b| %>
      <li>
      <%= b.check_box %>
      <%= b.label %>
      </li>
    <% end %>
  </div>
<br>

  <div class="form-group">
    <%= f.label :primera_visita, "Voy a llevar un nuevo perro a la veterinaria." %>
    <%= f.check_box :primera_visita %>
  </div>
  <br>
  <div class="form-group">
  <%= f.label :tipo_servicio, "Tipo de Servicio" %>
  <ul>
    <% [['Castración', 'castracion'], ['Vacunación', 'vacunacion'], ['Consulta General', 'consulta general'], ['Desparasitación', 'desparasitación']].each do |service| %>
      <li>
        <%= f.check_box :tipo_servicio, { multiple: true }, service.last, nil %>
        <%= f.label service.last, service.first %>
      </li>
    <% end %>
  </ul>
</div>




  <div class="form-group">
  <b>  <%= f.label :banda_horaria, "En que horario piensas llevar a tu perrito?" %></b>
    <%= f.select :banda_horaria, ["Turno 1 - 8 a 13 hs", "Turno 2 - 16 a 22 hs"] %>
  </div>
  <br>
  <div class="form-group">
  <b><%= f.label :fecha, "Fecha de atención" %></b>
    <%= f.date_field :fecha, min: Date.today.to_s, max: (Date.today + 1.month).to_s, class: "input-tamanocampo", required: true %>
  </div>

  <br>
  <div class="form-group">
  <b> <%= f.label :descripcion, " Descripción" %> </b>
    <%= f.text_area :descripcion, class: "input-tamanocampo",placeholder: "Escribe si llevas un nuevo Perro a la veterinaria y danos una descripción acerca del/los perrito/s", required: true %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.submit "Confirmar Turno", class: "btn-publicar btn-primary"  %>

<% end %>
</div>
