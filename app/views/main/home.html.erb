<nav>
  <ul class="nav-list">
    <li class="nav-item">
      <a href="<%= root_path %>" class="nav-link">volver</a>
    </li>
    <li class="nav-item">
      <a href="<%= edit_user_registration_path %>" class="nav-link">Editar Perfil</a>
    </li>

    <% if  user_signed_in? && current_user.admin? %>
      <li class="nav-item">
        <a href="<%= new_cuidadore_path %>" class="nav-link">Publicar Cuidador</a>
      </li>
      <li class="nav-item">
        <a href="<%= new_paseadore_path %>" class="nav-link">Publicar Paseador</a>
      </li>
    <% end %>
    <li class="nav-item">
      <a href="<%= destroy_user_session_path %>" data-method="delete" class="nav-link">Cerrar Sesión</a>
    </li>
    <% unless current_user %>
      <li class="nav-item">
        <a href="<%= new_user_registration_path %>" class="nav-link">Registrarse</a>
      </li>
      <li class="nav-item">
        <a href="<%= new_user_session_path %>" class="nav-link">Iniciar Sesión</a>
      </li>
    <% end %>
  </ul>
</nav>
<div class="list-container">
  <div class="column">
    <div class="paseadores-list">
      <h1>Lista de Paseadores de Perros</h1>
      <% if @paseadores.any? %>
        <ul>
          <% @paseadores.each do |paseador| %>
            <li class="paseador-item">
              <!-- Agrega la imagen del paseador aquí -->
              <div class="paseador-info">
                <h2><%= paseador.nombre %> <%= paseador.apellido %></h2>
                <p><strong>Horarios:</strong> <%= paseador.horarios %></p>
                <p><strong>Ubicación:</strong> <%= paseador.ubicacion %></p>
                <a class="btn btn-primary" href="<%= paseadore_path(paseador) %>">Ver detalles</a>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No hay publicaciones de paseadores para mostrar en este momento.</p>
      <% end %>
    </div>
  </div>
  <div class="column">
    <div class="cuidadores-list">
      <h1>Lista de Cuidadores de Perros</h1>
      <% if @cuidadores.any? %>
        <ul>
          <% @cuidadores.each do |cuidador| %>
            <li class="cuidador-item">
              <!-- Agrega la imagen del cuidador aquí -->
              <div class="cuidador-info">
                <h2><%= cuidador.nombre %> <%= cuidador.apellido %></h2>
                <p><strong>Horarios:</strong> <%= cuidador.horarios %></p>
                <p><strong>Ubicación:</strong> <%= cuidador.ubicacion %></p>
                <a class="btn btn-primary" href="<%= cuidadore_path(cuidador) %>">Ver detalles</a>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No hay publicaciones de cuidadores para mostrar en este momento.</p>
      <% end %>
    </div>
  </div>
</div>
